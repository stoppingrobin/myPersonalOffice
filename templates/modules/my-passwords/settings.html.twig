{% if ajax_render == false %}
    {% set template= "base.html.twig" %}
{% else %}
    {% set template= "blank.html.twig" %}
{% endif %}

    {% extends template %}

{% block body %}
    <!-- ### $App Screen Content ### -->
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            <div class="container-fluid">

                {% include "modules/common/components/info-block.twig" with {
                    text_translation_string   : 'passwords.settings.infoBlock.text.mainDescription',
                    header_translation_string : 'passwords.settings.infoBlock.header'
                } %}

                {# Forms #}
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column">
                            <h4 class="c-grey-900 mB-20 align-self-center">{{ 'passwords.settings.headers.changeAddCredentialsGroup' | trans }}</h4>

                            {% include('modules/my-passwords/components/groups-settings.table.html.twig') %}

                            <div class="col-md-6 align-self-center add-record-form">
                                {{ form_start(groups_form, {'attr':{'data-entity':"MyPasswordsGroups"}}) }}
                                {{ form_end(groups_form) }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock body %}
