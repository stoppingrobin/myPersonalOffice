{% if ajax_render == false %}
    {% set template= "base.html.twig" %}
{% else %}
    {% set template= "blank.html.twig" %}
{% endif %}

    {% extends template %}

{% block body %}

    <!-- ### $App Screen Content ### -->
    <main class='main-content bgc-grey-100' id="MyReportsMonthlyPaymentsSummariesModuleBody">
        <div id='mainContent'>
            <div class="container-fluid">

                {% include "modules/common/components/info-block.twig" with {
                    text_translation_string   : 'reports.paymentsCharts.infoBlock.text.mainDescription',
                    header_translation_string : 'reports.paymentsCharts.infoBlock.header'
                } %}

                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column col-12">
                                {{ rendered_chart_payment_for_type_each_month | raw }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column col-12">
                                {{ rendered_chart_payment_total_for_each_month | raw }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column col-6">
                                {{ chart_total_payments_amount_for_types | raw }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

{% endblock body %}
