{% if ajax_render == false %}
    {% set template= "base.html.twig" %}
{% else %}
    {% set template= "blank.html.twig" %}
{% endif %}

    {% extends template %}

{% block body %}
    <!-- ### $App Screen Content ### -->
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            <div class="container-fluid">

                {% include "modules/common/components/info-block.twig" with {
                    text_translation_string   : 'shopping.infoBlock.text.mainDescription',
                    header_translation_string : 'shopping.infoBlock.header'
                } %}

                {# DataTable shopping plans #}
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <h4 class="c-grey-900 mB-20 text-center">{{ 'shopping.headers.plannedShoppingItems' | trans }}</h4>
                                {% include 'modules/my-shopping/components/table.html.twig' %}
                        </div>
                    </div>
                </div>
                {# Form #}
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20 d-flex flex-column">
                            <h4 class="c-grey-900 mB-20 align-self-center">{{ 'shopping.headers.addPlannedItem' | trans }}</h4>
                            <div class="col-md-6 align-self-center add-record-form">
                                {{ form_start(plans_form_view,{'attr':{' data-entity':"MyShoppingPlans"}}) }}
                                {{ form_end(plans_form_view) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock body %}
