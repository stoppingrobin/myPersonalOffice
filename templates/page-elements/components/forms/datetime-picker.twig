{% if value is not defined %}
    {% set value = '' %}
{% endif %}

{% if disabled is not defined %}
    {% set disabled = '' %}
{% else %}
    {% set disabled = 'disabled' %}
{% endif %}

<input type="text"
       data-input
       data-is-datetime-picker="true"
       value="{{ value }}"
       class="date-picker form-control {{ disabled }} form-date-time-picker-input form-date-time-picker-input"
>