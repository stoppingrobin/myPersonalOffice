{% set data_on  =  'buttons.toggle.on' | trans %}
{% set data_off =  'buttons.toggle.off' | trans %}

{% if yes_no is defined and yes_no %}
    {% set data_on  =  'buttons.toggle.yes' | trans %}
    {% set data_off =  'buttons.toggle.no' | trans %}
{% endif %}

{% if classes is not defined %}
    {% set classes = '' %}
{% endif %}

{% set checked = "" %}
{% if value is defined and value %}
    {% set checked = "checked" %}
{% endif %}

{% if additional_attributes is not defined %}
    {% set additional_attributes = "" %}
{% endif %}

<input
    type="checkbox"
    data-toggle="toggle"
    data-on="{{ data_on }}"
    data-off="{{ data_off }}"
    data-toggle-class="{{ classes }}"
    data-toggle-bootstrap-toggle="true"
    {{ checked }}
    {{ additional_attributes }}
>