{% extends 'page-elements/components/sidebar/menu-nodes/base-menu-node.twig' %}
{% set menu_node_module_name = constant("App\\Action\\System\\AppAction::MENU_NODE_MODULE_NAME_MY_SHOPPING") %}

{% block nodeContent %}

    <li class="nav-item dropdown {{ keepMenuOpen(currUrl, path('my-shopping-plans')) }} sidebar-menu-node-element {{ isVisible ? "" : "d-none" }}" data-menu-node-name="{{ menu_node_module_name }}"
            {% include 'page-elements/components/guide-popup.twig' with {
                popoverAlignment: "right",
                popoverContent  : 'guide.modules.shopping.description' | trans
            }%}
    >
        <a class="sidebar-link left-nav-link" href="javascript:void(0);">
                    <span class="icon-holder menu-node-shopping-icon">
                            <i class="fas fa-shopping-cart fa-sm"></i>
                    </span>
            <span class="title">{{ 'sidebar.menu.shopping.label' | trans }}</span>
            <span class="arrow">
                        <i class="ti-angle-right fa-sm"></i>
                      </span>
        </a>

        <ul class="dropdown-menu">
            <li>
                <a class="sidebar-link left-nav-link" href="{{ path('my-shopping-plans') }}">{{ 'sidebar.menu.shopping.plans' | trans }}</a>
            </li>
        </ul>
    </li>

{% endblock nodeContent %}