<main class='main-content bgc-grey-100' id="MyPaymentsBills">
    <div id='mainContent'>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    <div class="bgc-white bd bdrs-3 p-10 mB-20">
                        <h4 class="c-grey-900 mB-20 text-center">{{ 'dialogs.editBill.header' | trans }}</h4>

                        <section class="p-20 update-record-form save-parent" data-type="MyPaymentsBills">

                            {{ form_start(bill_form, {'attr': {'data-entity': "MyPaymentsBills"}}) }}
                            <input class="d-none id" type="hidden" value="{{ id }}" disabled/>

                            <div class="row mT-10">
                                <div class="col-md-4">
                                    {{ form_label(bill_form['startDate']) }}
                                </div>
                                <div class="col-md-8 start-date">
                                    {{ form_widget(bill_form['startDate']) }}
                                </div>
                            </div>

                            <div class="row mT-10">
                                <div class="col-md-4">
                                    {{ form_label(bill_form['endDate']) }}
                                </div>
                                <div class="col-md-8 end-date">
                                    {{ form_widget(bill_form['endDate']) }}
                                </div>
                            </div>

                            <div class="row mT-10">
                                <div class="col-md-4">
                                    {{ form_label(bill_form['name']) }}
                                </div>
                                <div class="col-md-8 name">
                                    {{ form_widget(bill_form['name']) }}
                                </div>
                            </div>

                            <div class="row mT-10">
                                <div class="col-md-4">
                                    {{ form_label(bill_form['information']) }}
                                </div>
                                <div class="col-md-8 information">
                                    {{ form_widget(bill_form['information']) }}
                                </div>
                            </div>

                            <div class="row mT-10">
                                <div class="col-md-4">
                                    {{ form_label(bill_form['plannedAmount']) }}
                                </div>
                                <div class="col-md-8 planned-amount">
                                    {{ form_widget(bill_form['plannedAmount']) }}
                                </div>
                            </div>

                            <div class="row mT-10 d-flex flex-row flex-nowrap justify-content-center save-record">
                                <div>
                                    {{ form_widget(bill_form['submit']) }}
                                </div>
                            </div>
                            {{ form_end(bill_form) }}
                        </section>

                    </div>

                </div>
            </div>
        </div>
    </div>
</main>