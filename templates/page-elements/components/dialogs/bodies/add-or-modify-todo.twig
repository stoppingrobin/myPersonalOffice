<main class='main-content bgc-grey-100'>
    <div id='mainContent'>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="bgc-white bd bdrs-3 p-10 mB-20">

                        {% if todo is not defined or todo is empty %}
                            <h4 class="c-grey-900 mB-20 text-center">{{ 'dialogs.addOrModifyTodo.add' | trans }}</h4>

                            <section class="p-20 add-record-form" data-type="MyTodo">
                                {{ form_start(todo_form,{'attr':{'data-entity':"MyTodo"}}) }}


                                <div class="form-group row">
                                    {{ form_label(todo_form.name) }}
                                    <div class="col-sm-10">
                                        {{ form_widget(todo_form.name) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    {{ form_label(todo_form.description) }}
                                    <div class="col-sm-10">
                                        {{ form_widget(todo_form.description) }}
                                    </div>
                                </div>

                                <div class="form-group row {{ hide_module_select ? " d-none" : ""}}">
                                    {{ form_label(todo_form.module) }}
                                    <div class="col-sm-10">
                                        {{ form_widget(todo_form.module) }}
                                    </div>
                                </div>

                                <div class="form-group row {{ (hide_display_on_dashboard is defined and hide_display_on_dashboard) ? " d-none" : ""}}">
                                    {{ form_label(todo_form.displayOnDashboard) }}
                                    <div class="col-sm-10">
                                        {{ form_widget(todo_form.displayOnDashboard) }}
                                    </div>
                                </div>

                                {{ form_widget(todo_form.relatedEntityId, {value: entity_id}) }}

                                <div class="form-group row">
                                    <div class="col-sm-2"></div>
                                    <div class="col-sm-10">
                                        {{ form_widget(todo_form.submit, {attr: {
                                            class: 'btn-primary btn',
                                            'data-template-url': data_template_url
                                        }}) }}
                                    </div>
                                </div>

                                {{ form_end(todo_form) }}
                            </section>

                        {% else %}
                            <h4 class="c-grey-900 mB-20 text-center">{{ 'dialogs.addOrModifyTodo.modify' | trans }}</h4>
                            <h6 class="text-center c-grey-900"><i>{{ todo.name }}</i></h6>

                            {% include 'modules/my-todo/components/modal-body.html.twig' with {
                                todo: todo,
                                data_template_url: data_template_url
                            }%}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>