{% set issueProgressContactFormClass = 'App\\Form\\Modules\\Issues\\MyIssueContactType::' %}

{%  set FIELD_DATE        = constant(issueProgressContactFormClass ~ 'FIELD_DATE') %}
{%  set FIELD_ICON        = constant(issueProgressContactFormClass ~ 'FIELD_ICON') %}
{%  set FIELD_ISSUE       = constant(issueProgressContactFormClass ~ 'FIELD_ISSUE') %}
{%  set FIELD_INFORMATION = constant(issueProgressContactFormClass ~ 'FIELD_INFORMATION') %}

<main class='main-content bgc-grey-100' id="MyIssuesPreview">
    <div id='mainContent'>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    {# Main headers #}
                    <div class="bgc-white bd bdrs-3 p-10 mB-20">
                        <h4 class="c-grey-900 mB-20 text-center">{{ issueCardDto.getIssue().getName() }}</h4>
                        <h5 class="text-center small-header">{{ issueCardDto.getIssue().getInformation() }}</h5>
                    </div>

                    <div class="bgc-white bd bdrs-3 p-10 mB-20">
                        <div data-smart-tab="true">

                            <ul class="nav">
                                <li><a class="nav-link" href="#tab-1" id="tab-nav-1">
                                        {{ 'dialogs.addIssueContact.tabs.contact.label' | trans }}
                                </a></li>
                                <li><a class="nav-link" href="#tab-2" id="tab-nav-2">
                                        {{ 'dialogs.addIssueContact.tabs.progress.label' | trans }}
                                </a></li>
                            </ul>

                            <div class="tab-content">
                                <div id="tab-1" class="tab-pane" role="tabpanel">

                                    {# Contact Form #}
                                    <div class="bgc-white bdrs-3 p-10 mB-20">
                                        <section class="p-20 add-record-form">

                                            <div class="col-md-12">
                                                {{ form_start(contactForm, {'attr': {"data-entity": "MyIssueContact"}}) }}

                                                <div class="row">
                                                    <div class="col-sm-2">
                                                        {{ form_label(contactForm[FIELD_INFORMATION]) }}
                                                    </div>
                                                    <div class="col-sm-10">
                                                        {{ form_widget(contactForm[FIELD_INFORMATION]) }}
                                                    </div>
                                                </div>

                                                <div class="row margin-top-10-px">
                                                    <div class="col-sm-2">
                                                        {{ form_label(contactForm[FIELD_ISSUE]) }}
                                                    </div>
                                                    <div class="col-sm-4">
                                                        {{ form_widget(contactForm[FIELD_ISSUE]) }}
                                                    </div>

                                                    <div class="col-sm-2">
                                                        {{ form_label(contactForm[FIELD_DATE]) }}
                                                    </div>
                                                    <div class="col-sm-4">
                                                        {{ form_widget(contactForm[FIELD_DATE]) }}
                                                    </div>
                                                </div>

                                                <div class="row margin-top-10-px">
                                                    <div class="col-sm-2">
                                                        {{ form_label(contactForm[FIELD_ICON]) }}
                                                    </div>
                                                    <div class="col-sm-10">
                                                        {{ form_widget(contactForm[FIELD_ICON]) }}
                                                    </div>

                                                </div>

                                                <div class="d-flex justify-content-center margin-top-10-px">
                                                    {{ form_widget(contactForm['submit']) }}
                                                </div>

                                                {{ form_end(contactForm) }}
                                            </div>

                                        </section>
                                    </div>
                                </div>
                                <div id="tab-2" class="tab-pane" role="tabpanel">

                                    {# Progress Form #}
                                    <div class="bgc-white bdrs-3 p-10 mB-20">
                                        <section class="p-20 add-record-form">

                                            <div class="col-md-12">
                                                {{ form_start(progressForm, {'attr': {"data-entity": "MyIssueProgress"}}) }}

                                                <div class="row">
                                                    <div class="col-sm-2">
                                                        {{ form_label(progressForm[FIELD_INFORMATION]) }}
                                                    </div>
                                                    <div class="col-sm-10">
                                                        {{ form_widget(progressForm[FIELD_INFORMATION]) }}
                                                    </div>
                                                </div>

                                                <div class="row margin-top-10-px">
                                                    <div class="col-sm-2">
                                                        {{ form_label(progressForm[FIELD_ISSUE]) }}
                                                    </div>
                                                    <div class="col-sm-4">
                                                        {{ form_widget(progressForm[FIELD_ISSUE]) }}
                                                    </div>

                                                    <div class="col-sm-2">
                                                        {{ form_label(progressForm[FIELD_DATE]) }}
                                                    </div>
                                                    <div class="col-sm-4">
                                                        {{ form_widget(progressForm[FIELD_DATE]) }}
                                                    </div>
                                                </div>

                                                <div class="d-flex justify-content-center margin-top-10-px">
                                                    {{ form_widget(progressForm['submit']) }}
                                                </div>

                                                {{ form_end(progressForm) }}

                                            </div>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</main>